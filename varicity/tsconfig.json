{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "noResolve": false,
    "noImplicitAny": false,
    "sourceMap": true,
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
      "webpack-env",
      "mocha"
    ],
    "lib": [
      "dom",
      "es6"
    ],
    "rootDir": "src"
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "tests"
  ],
  "filesGlob": [
    "./src/**/*.ts",
    "./test/**/*.ts",
    "./typings/index.d.ts",
    "./custom_typings/**/*.d.ts",
    "./node_modules/@types/**/*.d.ts"
  ],
}